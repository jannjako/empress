{
    "name": "empress-php/empress",
    "description": "Empress is a flexible microframework for creating async web applications in PHP 8.",
    "type": "library",
    "license": "MIT",
    "bin": [
        "bin/empress"
    ],
    "require": {
        "php": "^8.2",
        "ext-mbstring": "*",
        "amphp/amp": "^3.0",
        "amphp/http-server": "^3.0",
        "monolog/monolog": "^3.7",
        "amphp/log": "^2.0",
        "amphp/http-server-form-parser": "v2.0",
        "amphp/http-server-static-content": "v2.0",
        "amphp/http-server-session": "^3.0",
        "cash/lrucache": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Empress\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Empress\\Test\\": "test/"
        }
    },
    "require-dev": {
        "psy/psysh": "*",
        "phpunit/phpunit": "^11.0",
        "php-coveralls/php-coveralls": "^2.7",
        "psalm/phar": "^5.0",
        "amphp/http-client": "^5.0",
        "amphp/http-client-cookies": "^v2.0",
        "symplify/easy-coding-standard": "^12.0"
    }
}
